<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingEnd="8dp">

        <TextView
            android:id="@+id/tvNamaKegiatan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Kegiatan"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDeskripsiKegiatan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deskripsi Kegiatan" />
    </LinearLayout>

    <ImageView
        android:id="@+id/btnEditKegiatan"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/baseline_mode_edit_outline_24"
        android:layout_gravity="center_vertical" />

    <ImageView
        android:id="@+id/btnDeleteKegiatan"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/baseline_delete_24"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="16dp" />
</LinearLayout>